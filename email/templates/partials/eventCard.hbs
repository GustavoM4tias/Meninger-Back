<table role="presentation" width="100%" cellspacing="0" cellpadding="0"
    style="border:1px solid #e5e7eb;border-radius:12px;overflow:hidden;">
    {{#if hero}}
    <tr>
        <td>
            <img src="{{hero}}" alt="Evento">
        </td>
    </tr>
    {{/if}}
    <tr>
        <td class="px py">
            <h2 style="margin:0 0 8px 0;">{{title}}</h2>
            {{#if eventDateFormatted}}
            <p class="muted"
                style="margin:0 0 8px 0;">{{eventDateFormatted}}</p>
            {{/if}}
            {{#if tags}}
            <p style="margin:0 0 12px 0;">
                {{#each tags}}<span class="tag">{{this}}</span>{{/each}}
            </p>
            {{/if}}
            {{#if description}}
            <p style="margin:0 0 12px 0; line-height:1.5;">{{description}}</p>
            {{/if}}
            {{#if address}}
            <p class="muted" style="margin:0;">
                {{address.street}}{{#if address.number}},
                {{address.number}}{{/if}} â€” {{address.city}}/{{address.state}}
            </p>
            {{/if}}
        </td>
    </tr>
</table>
